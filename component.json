{
  "title": "PostgreSQL",
  "description": "Simple SQL query against a PostgreSQL",
  "docsUrl":"https://github.com/elasticio/postgresql-component",
  "credentials": {
    "fields": {
      "conString": {
        "label": "Connection String",
        "required": true,
        "viewClass": "TextFieldView",
        "placeholder": "postgres://username:password@localhost/database"
      }
    }
  },
  "actions": {
    "sqlQuery": {
      "title": "SQL Query",
      "main": "./lib/actions/sqlQuery.js",
      "dynamicMetadata": true,
      "fields": {
        "query": {
          "label": "SQL Query",
          "required": true,
          "viewClass": "TextAreaView",
          "default": "SELECT id:number, name, email FROM customers WHERE account_id = $accountId:string"
        }
      }
    }
  },
  "triggers": {
    "sqlQuery": {
      "title": "SQL Query",
      "main": "./lib/actions/sqlQuery.js",
      "dynamicMetadata": true,
      "type": "polling",
      "fields": {
        "query": {
          "label": "SQL Query",
          "required": true,
          "viewClass": "TextAreaView",
          "default": "SELECT id:number, name, email FROM customers WHERE account_id = $accountId:string"
        }
      }
    }
  }
}
